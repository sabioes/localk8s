IMAGE_NAME = "bento/ubuntu-22.04"
N = 2

Vagrant.configure("2") do |config|
    config.ssh.insert_key = false

    config.vm.define "k8s-master" do |master|
        master.vm.box = IMAGE_NAME
        master.vm.network "public_network", use_dhcp_assigned_default_route: true, bridge: "wlp3s0"
        master.vm.hostname = "k8s-master"
        master.vm.provider "virtualbox" do |vb|
            vb.cpus = 2
            vb.memory = 2048
        end
        #master.ssh.private_key_path = ['~/.vagrant.d/insecure_private_key', '~/.ssh/id_rsa']
        #master.vm.provision "ansible" do |ansible|
        #    ansible.playbook = "kubernetes-setup/master-playbook.yml"
        #    ansible.extra_vars = {
        #        node_ip: "192.168.50.10",
        #    }
        #end
    end


    (1..N).each do |i|
        config.vm.define "node-#{i}" do |node|
            node.vm.box = IMAGE_NAME
            node.vm.network "public_network", use_dhcp_assigned_default_route: true, bridge: "wlp3s0"
            node.vm.hostname = "node-#{i}"
            node.vm.provider "virtualbox" do |vb|
                vb.cpus = 1
                vb.memory = 2048
            end
            #node.vm.provision "ansible" do |ansible|
            #    ansible.playbook = "kubernetes-setup/node-playbook.yml"
            #    ansible.extra_vars = {
            #        node_ip: "192.168.50.#{i + 10}",
            #    }
            #end
        end
    end

    #config.vm.provision "shell", inline: <<-SHELL
    #    cat ~/.ssh/id_rsa.pub >> ~/.ssh/authorized_keys
    #SHELL
end